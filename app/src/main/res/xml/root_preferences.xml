<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="sql"
        app:title="SQL">
        <SwitchPreferenceCompat
            app:key="room"
            app:title="Use Room"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="Filter">
        <EditTextPreference
            app:key="name"
            app:title="Name"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="age"
            app:title="Age"
            app:dialogLayout="@layout/preference_edit_int"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="breed"
            app:title="Breed"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>
</PreferenceScreen>